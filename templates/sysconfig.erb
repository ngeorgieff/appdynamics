<% if ig_environment_uc =~ /^NADEX_/ -%>
AD_hostName=<%= appd_controller %>.<%= nadex_environment %>.iggroup.local
<% else -%>
AD_hostName=<%= appd_controller %>.<%= ig_environment %>.iggroup.local
<% end -%>
AD_port=<%= appd_controller_port %>
AD_applicationName=<%= appd_app_name %>
